# Smart Learning System - Backend Environment Configuration
# 复制此文件为 .env 并填写实际的配置值

# ==================== 数据库配置 ====================
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password-here
POSTGRES_DB=smartlearning
POSTGRES_PORT=5432

# ==================== 安全配置 ====================
# 生成强密钥: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS 跨域配置（逗号分隔多个源）
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================== 阿里云 OSS 配置 ====================
# 获取方式: 阿里云控制台 -> AccessKey 管理
OSS_ACCESS_KEY_ID=your-aliyun-access-key-id
OSS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
OSS_BUCKET_NAME=your-bucket-name
OSS_REGION=cn-beijing
OSS_ENDPOINT=
OSS_USE_CNAME=false

# ==================== 阿里云 IMM 配置 ====================
# 智能媒体管理服务（用于文档预览）
IMM_PROJECT=your-imm-project-name
IMM_REGION=cn-beijing

# ==================== 大模型 API 配置 ====================
# 通义千问 API Key（用于 AI 功能）
# 获取方式: https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=your-dashscope-api-key

# OpenAI API Key（可选，用于备用 LLM）
OPENAI_API_KEY=your-openai-api-key

# ==================== PPT 生成服务配置（可选）====================
BANANA_SLIDES_API_URL=http://localhost:5002
BANANA_SLIDES_FRONTEND_URL=http://localhost:3002
GEMINI_API_KEY=your-gemini-api-key

# ==================== Redis 配置（可选）====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== 应用配置 ====================
# 环境: development, production
ENVIRONMENT=development
DEBUG=True
